@*@using PagedList
@using PagedList.Mvc*@
@model IEnumerable<TravelBlogMVC.Models.Model.BlogPosts>
@{
    ViewBag.Title = "citiesBlog";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">City Blog</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                <h3><a href="/Home/blogDetail/@item.Id">@item.Title</a></h3>
                            </div>
                            <img src="@item.ResimURL" alt="" />
                        </div>
                        <p>
                            @Html.Raw(item.Content.Substring(0, 250)) ...
                        </p>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                <li><i class="icon-calendar"></i><a href="#"> @item.DatePosted</a></li>
                                <li><i class="icon-user"></i><a href="#">@item.User</a></li>
                                <li><i class="icon-folder-open"></i><a href="#"> @item.City.CityName</a></li>
                                <li><i class="icon-comments"></i><a href="#">4 Comments</a></li>
                            </ul>
                            <a href="/Home/blogDetail/@item.Id" class="pull-right">Continue reading <i class="icon-angle-right"></i></a>
                        </div>
                    </article>
                }



                @*<div id="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.Classic)
                </div>*@
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Cities</h5>
                        @{
                            Html.RenderAction("IndexPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Latest Blog Posts</h5>
                        <ul class="recent">
                            @{
                                Html.RenderAction("blogPartial", "Home");
                            }
                        </ul>
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>
